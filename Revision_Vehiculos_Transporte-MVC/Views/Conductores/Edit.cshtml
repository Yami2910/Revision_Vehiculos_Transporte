@model Revision_Vehiculos_Transporte_MVC.Models.Conductor

@{
    ViewData["Title"] = "Edit";
}

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styleFormu.css" asp-append-version="true" />
</head>

<h1>Modificar informacion del Conductor</h1>


<hr />
<div>
    <form asp-action="Edit" id="x" class="row mt-6 g-3 needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group col-3">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre Conductor" pattern="[a-z A-Z]*" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div> 
            @*<span asp-validation-for="Nombre" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Apellido" class="control-label"></label>
            <input asp-for="Apellido" class="form-control" placeholder="Apellido Conductor" pattern="[a-z A-Z]*" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div> 
            @*<span asp-validation-for="Apellido" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Direccion" class="control-label"></label>
            <input asp-for="Direccion" class="form-control" placeholder="Direccion Conductor" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div> 
            @*<span asp-validation-for="Direccion" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Email Conductor" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. El email debe llevar @@</div> 
            @*<span asp-validation-for="Email" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="NumeroTelefono" class="control-label"></label>
            <input asp-for="NumeroTelefono" class="form-control" placeholder="Telefono Conductor" pattern="[0-9]*" maxlength="10" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. Ingresa un numero telefonico valido</div> 
            @*<span asp-validation-for="NumeroTelefono" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="FechaNacimiento" class="control-label"></label>
            <input type="date" asp-for="FechaNacimiento" class="form-control" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="FechaNacimiento" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="TipoLicencia" class="control-label"></label>
            <input asp-for="TipoLicencia" class="form-control" placeholder="Tipo de Licencia Conductor" pattern="[0-9 A-Z]*" required="" maxlength="2" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. Ingresa un tipo valido. EJ: B1</div> 
            @*<span asp-validation-for="TipoLicencia" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="NumeroDocumento" class="control-label"></label>
            <input asp-for="NumeroDocumento" class="form-control" placeholder="Documento Conductor" pattern="[0-9]*" maxlength="20" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. Ingresa un numero de documento valido</div> 
            @*<span asp-validation-for="NumeroDocumento" class="text-danger"></span>*@
        </div>

        <input type="submit" value="GUARDAR CAMBIOS" class="btn btn-warning text-dark fw-bold" />

    </form>
</div>


<a asp-action="Index" class="fw-bold">
    VOLVER A LA LISTA
    <i class="bi bi-chevron-double-left"></i>
</a>


<script src="~/js/scriptFormu.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
