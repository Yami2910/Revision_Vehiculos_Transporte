@model Revision_Vehiculos_Transporte_MVC.Models.Mecanico

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styleFormu.css" asp-append-version="true" />
</head>

<h1>AGREGAR NUEVO MECANICO</h1>

<hr />

<div>
    <form asp-action="Create" class="row mt-6 g-3 needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-3">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre Mecanico" pattern="[a-z A-Z]*" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="Nombre" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Apellido" class="control-label"></label>
            <input asp-for="Apellido" class="form-control" placeholder="Apellido Mecanico" pattern="[a-z A-Z]*" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="Apellido" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Direccion" class="control-label"></label>
            <input asp-for="Direccion" class="form-control" placeholder="Direccion Mecanico" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="Direccion" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" asp-for="Email" class="form-control" class="form-control" placeholder="Email Mecanico" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. El email debe llevar @@</div>
            @*<span asp-validation-for="Email" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="NumeroTelefono" class="control-label"></label>
            <input asp-for="NumeroTelefono" class="form-control" placeholder="Telefono Mecanico" pattern="[0-9]*" maxlength="10" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. Ingresa un numero telefonico valido</div>
            @*<span asp-validation-for="NumeroTelefono" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="FechaNacimiento" class="control-label"></label>
            <input type="date" asp-for="FechaNacimiento" class="form-control" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="FechaNacimiento" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="NivelEstudios" class="control-label"></label>
            <input asp-for="NivelEstudios" class="form-control" placeholder="Nivel de Estudios Mecanico" pattern="[a-z A-Z]*" required="" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio</div>
            @*<span asp-validation-for="NivelEstudios" class="text-danger"></span>*@
        </div>
        <div class="form-group col-3">
            <label asp-for="NumeroDocumento" class="control-label"></label>
            <input asp-for="NumeroDocumento" class="form-control" placeholder="Documento Mecanico" pattern="[0-9]*" required="" maxlength="20" />
            <div class="valid-feedback">Todo bien</div>
            <div class="invalid-feedback">Es necesario llenar este espacio. Ingresa un numero de documento valido</div>
            @*<span asp-validation-for="NumeroDocumento" class="text-danger"></span>*@
        </div>

            <input type="submit" value="AGREGAR" class="btn btn-success" />
        
    </form>
</div>


<a asp-action="Index" class="fw-bold">
    VOLVER A LA LISTA
    <i class="bi bi-chevron-double-left"></i>
</a>

<script src="~/js/scriptFormu.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
