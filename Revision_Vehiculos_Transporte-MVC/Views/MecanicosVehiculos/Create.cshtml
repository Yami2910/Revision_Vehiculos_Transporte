@model Revision_Vehiculos_Transporte_MVC.Models.MecanicoVehiculo

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styleFormu.css" asp-append-version="true" />
</head>

<h1>ASIGNAR MECANICO A VEHICULO</h1>

<hr />

<div>
    <form asp-action="Create" class="row mt-6 g-3 needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-6">
            <label asp-for="IdMecanico" class="control-label"></label>
            <select asp-for="IdMecanico" class ="form-control" asp-items="ViewBag.IdMecanico"></select>
        </div>
        <div class="form-group col-6">
            <label asp-for="IdVehiculo" class="control-label"></label>
            <select asp-for="IdVehiculo" class ="form-control" asp-items="ViewBag.IdVehiculo"></select>
        </div>

            <input type="submit" value="AGREGAR" class="btn btn-success" />

    </form>
</div>


<a asp-action="Index" class="fw-bold">
    VOLVER A LA LISTA
    <i class="bi bi-chevron-double-left"></i>
</a>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
