@model Revision_Vehiculos_Transporte_MVC.Models.MecanicoVehiculo

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/styleDelete.css" asp-append-version="true" />
</head>

<h1 class="text-decoration-underline text-danger fw-bold">ELIMINAR</h1>

<h3>¿Desea eliminar estos datos?</h3>
<div>
    <h4>MecanicoVehiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdMecanicoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMecanicoNavigation.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdVehiculoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdVehiculoNavigation.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger fw-bold" /> |
        <a asp-action="Index" class="fw-bold">
            VOLVER A LA LISTA
            <i class="bi bi-chevron-double-left"></i>
        </a>
    </form>

    <br />
    <br />
</div>
